{
  "name": "pmr-portefolio",
  "version": "1.0.0",
  "description": "Personal Portefolio",
  "main": "index.html",
  "scripts": {
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:scss": "node-sass --output-style compressed -o dist src/style",
    "css:lint": "stylelint src/style/*.scss  --custom-syntax postcss-scss",
    "watch:css": "onchange src/style -- npm run build:css",
    "compile:scss": "node-sass style/style.scss dist/style/style.css --output-style compressed",
    "build:images": "imagemin src/assets --out-dir=dist/assets",
    "watch:images": "onchange \"src/assets\" -- npm run build:images",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*"
  },
  "author": "pedromiguelrelvas@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "cssnano": "^6.0.3",
    "eslint": "^8.56.0",
    "eslint-webpack-plugin": "^4.0.1",
    "htmlnano": "^2.1.0",
    "imagemin-cli": "^7.0.0",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^11.0.0",
    "postcss-scss": "^4.0.9",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.9.1",
    "stylelint": "^16.2.0",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  }
}
